            <groupId>mc.alk</groupId>
            <artifactId>vp-vpre</artifactId>
            <version>parent</version>
            <type>jar</type>
            <optional>true</optional>
        </dependency>
        <dependency>
            <groupId>mc.alk</groupId>
            <artifactId>vp-v1_4_5</artifactId>
            <version>parent</version>
            <type>jar</type>
            <optional>true</optional>
        </dependency>
        <dependency>
            <groupId>mc.alk</groupId>
            <artifactId>vp-v1_4_6</artifactId>
            <version>parent</version>
